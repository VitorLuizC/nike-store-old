.menu
  & > .list
    display: flex
    list-style: none

    & > .item
      margin-right: $menu.margin-x / 2
      margin-left: @margin-right
      font-size: .875rem
      font-weight: bold

  & > .toggler
    position: relative
    display: block
    width: $menu-toggler.width
    height: $menu-toggler.height
    margin-top: $menu-toggler.height * 1.75
    margin-bottom: @margin-top
    border-radius: $menu-toggler.border-radius
    background-color: $menu-toggler.color

    +breakpoint(sm)
      display: none

    &::before
    &::after
      display: block
      width: $menu-toggler.width
      height: $menu-toggler.height
      border-radius: $menu-toggler.border-radius
      background-color: $menu-toggler.color
      transition: transform .8s ease-out
      content: ''

    &::before
      transform: translateY(-175%)

    &::after
      transform: translateY(75%)

    &.active
      background-color: transparent
      &::before
        transform: translateY(0) rotate(45deg)
      &::after
        transform: translateY(-100%) rotate(-45deg)
